<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#ff8989"></solid>
            <stroke
                android:color="#eb4c3c"
                android:width="1dp"></stroke>
            <corners
                android:radius="3dp"></corners>
            <padding
                android:bottom="5dp"
                android:left="25dp"
                android:right="25dp"
                android:top="5dp"></padding>
        </shape>
    </item>

    <item
        android:state_pressed="false">
        <shape>
            <solid
                android:color="#00ffffff"></solid>
            <stroke
                android:color="#eb4c3c"
                android:width="3dp"></stroke>
            <corners
                android:radius="3dp"></corners>
            <padding
                android:bottom="5dp"
                android:left="25dp"
                android:right="25dp"
                android:top="5dp"></padding>
        </shape>
    </item>
</selector>